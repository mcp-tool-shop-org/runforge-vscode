{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/mcp-tool-shop-org/runforge-vscode/contracts/run.schema.v0.3.3.json",
  "title": "RunForge Run Metadata v0.3.3",
  "description": "Schema for run.json metadata file produced by RunForge Phase 3.3+. Adds metrics_v1 artifact and profile fields.",
  "type": "object",
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Stable identifier: YYYYMMDD-HHMMSS-<shortHash>"
    },
    "runforge_version": {
      "type": "string",
      "description": "Version of RunForge that produced this run"
    },
    "schema_version": {
      "type": "string",
      "enum": ["run.v0.3.3"],
      "description": "Schema version for this run.json format"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp of run creation"
    },
    "dataset": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to dataset file"
        },
        "fingerprint_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of dataset file bytes"
        }
      },
      "required": ["path", "fingerprint_sha256"],
      "additionalProperties": false
    },
    "label_column": {
      "type": "string",
      "description": "Name of the label column used"
    },
    "model_family": {
      "type": "string",
      "enum": ["logistic_regression", "random_forest", "linear_svc"],
      "description": "Model family used for training"
    },
    "num_samples": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of samples after dropping missing values"
    },
    "num_features": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of feature columns (excluding label)"
    },
    "dropped_rows_missing_values": {
      "type": "integer",
      "minimum": 0,
      "description": "Count of rows dropped due to missing values"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "accuracy": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "num_samples": {
          "type": "integer",
          "minimum": 0
        },
        "num_features": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["accuracy", "num_samples", "num_features"],
      "additionalProperties": false,
      "description": "Phase 2.1 metrics summary (frozen, backward compatible)"
    },
    "metrics_v1": {
      "type": "object",
      "properties": {
        "schema_version": {
          "const": "metrics.v1",
          "description": "Must match metrics.v1.json schema_version"
        },
        "metrics_profile": {
          "type": "string",
          "enum": ["classification.base.v1", "classification.proba.v1", "classification.multiclass.v1"],
          "description": "Must match metrics.v1.json metrics_profile"
        },
        "artifact_path": {
          "type": "string",
          "description": "Relative path to metrics.v1.json from run directory"
        }
      },
      "required": ["schema_version", "metrics_profile", "artifact_path"],
      "additionalProperties": false,
      "description": "Pointer to detailed metrics artifact (Phase 3.3+)"
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "model_pkl": {
          "type": "string",
          "description": "Relative path to model.pkl from run directory"
        },
        "metrics_v1_json": {
          "type": "string",
          "description": "Relative path to metrics.v1.json from run directory (Phase 3.3+)"
        }
      },
      "required": ["model_pkl"],
      "additionalProperties": false
    },
    "profile_name": {
      "type": "string",
      "enum": ["default", "fast", "thorough"],
      "description": "Training profile name (Phase 3.2+, omit if no profile)"
    },
    "profile_version": {
      "type": "string",
      "description": "Training profile version (Phase 3.2+, omit if no profile)"
    },
    "expanded_parameters_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 of expanded profile parameters (Phase 3.2+, omit if no profile)"
    },
    "hyperparameters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {},
          "source": {
            "type": "string",
            "enum": ["cli", "profile", "model_default"]
          }
        },
        "required": ["name", "value", "source"],
        "additionalProperties": false
      },
      "description": "Hyperparameters with provenance (Phase 3.2+)"
    }
  },
  "required": [
    "run_id",
    "runforge_version",
    "schema_version",
    "created_at",
    "dataset",
    "label_column",
    "model_family",
    "num_samples",
    "num_features",
    "dropped_rows_missing_values",
    "metrics",
    "metrics_v1",
    "artifacts"
  ],
  "dependentRequired": {
    "profile_name": ["profile_version", "expanded_parameters_hash"],
    "profile_version": ["profile_name", "expanded_parameters_hash"],
    "expanded_parameters_hash": ["profile_name", "profile_version"]
  },
  "additionalProperties": false
}
